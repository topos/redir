#!/bin/sh

# eth1 is the default created by pipework
pipework --wait

dnsmasq --no-daemon \
    --interface=eth1 \
    --listen-address 192.168.16.1 \
    --except-interface=lo,eth0 \
    --no-hosts \
    --no-resolv \
    --dhcp-authoritative \
    --strict-order \
    --dhcp-sequential-ip \
    --dhcp-range=192.168.16.10,192.168.16.254 \
    --dhcp-boot=pxelinux.0,pxeserver,192.168.16.1 \
    --pxe-service=x86PC,"Install Linux",pxelinux \
    --enable-tftp --tftp-root=/tftp/
 
